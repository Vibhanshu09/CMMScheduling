            <corners android:radius="30dp" />
            <stroke android:width="6dp" android:color="#5E82ED" />
            <solid android:color="#dad9d9" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="30dp" />
            <stroke android:width="6dp" android:color="#5E82ED" />
            <solid android:color="#dad9d9" />
        </shape>
    </item>
</selector>